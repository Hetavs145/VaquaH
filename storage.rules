rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Products images - allow authenticated users to upload, everyone can read
    match /products/{productId}/{allPaths=**} {
      // Allow read for everyone (public access)
      allow read: if true;
      
      // Allow write (upload/delete) for authenticated users only
      allow write: if request.auth != null;
    }
    
    // User profile images
    match /users/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // General uploads folder - authenticated users only
    match /uploads/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
  }
}

